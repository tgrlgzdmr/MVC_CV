@using MVC_CV.Models.Entity
@model List<Tbl_Certificates>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header p-2">
                                    <a href="/Certificate/AddCertificate/" class="btn btn-primary">Add New Certificate</a>
                                </div>
                                <div class="card-body">
                                    <div class="tab-pane" id="timeline">
                                        <!-- The timeline -->
                                        @foreach (var x in Model)
                                        {
                                            <div class="timeline timeline-inverse">
                                                <!-- timeline time label -->

                                                <div class="time-label">
                                                    <span class="bg-success">
                                                        @x.Date
                                                    </span>
                                                </div>
                                                <!-- /.timeline-label -->
                                                
                                                <!-- timeline item -->
                                                <div>
                                                    <i class="fas fa-certificate bg-primary"></i>

                                                    <div class="timeline-item">
                                                        <div class="timeline-body">
                                                            @x.Explanation
                                                        </div>
                                                        <div class="timeline-footer">
                                                            <a href="/Certificate/UpdateCertificate/@x.Id" class="btn btn-primary btn-sm">Edit</a>
                                                            <a href="/Certificate/DeleteCertificate/@x.Id" class="btn btn-danger btn-sm">Delete</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        </div>
                                    </div>
                                    <!-- /.tab-content -->
                                </div><!-- /.card-body -->
                            </div>
                            <!-- /.nav-tabs-custom -->
                        </div>
                        <!-- /.col -->
                    </div>
            </section>
</body>
</html>


