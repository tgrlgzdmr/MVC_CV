@using MVC_CV.Models.Entity
@model Tbl_Skill
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Update Skill Page</h4>
<br />
<form method="post">
    @Html.Label("Skill Id")
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
    <br />
    @Html.Label("Skill Name")
    @Html.TextBoxFor(x => x.Skill, new { @class = "form-control" })
    <br />
    @Html.Label("Skill Level (0-100)")
    @Html.TextBoxFor(x => x.Level, new { @class = "form-control" })
    <br />
    <button class="btn btn-danger">Update</button>
</form>

